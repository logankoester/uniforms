{
  "name": "uniforms",
  "version": "1.1.1",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "description": "Core package of uniforms.",
  "repository": "https://github.com/vazco/uniforms/tree/master/packages/uniforms",
  "homepage": "https://github.com/vazco/uniforms/",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vazco/uniforms/issues"
  },
  "keyword": [
    "form",
    "forms",
    "meteor",
    "react",
    "react-component",
    "schema",
    "validation"
  ],
  "files": [
    "lib/",
    "src/"
  ],
  "scripts": {
    "build": "babel --compact --out-dir lib src",
    "clean": "rimraf coverage lib .nyc_output",
    "cover": "cross-env NODE_ENV=test nyc npm test",
    "lint": "eslint src test",
    "prepublish": "npm run build",
    "pretest": "npm run lint",
    "reset": "rimraf node_modules",
    "test": "babel-node node_modules/.bin/_mocha --require test/index.js --recursive test --reporter list"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-istanbul": "^2.0.2",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "cross-env": "^2.0.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.5.0",
    "eslint-config-vazco": "2.0.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.2.0",
    "jsdom": "^9.5.0",
    "mocha": "^3.0.2",
    "mock-require": "^1.3.0",
    "nyc": "^8.1.0",
    "react": "^15.0.0 || ^0.14.0",
    "react-addons-test-utils": "^15.0.0 || ^0.14.0",
    "react-dom": "^15.0.0 || ^0.14.0",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.5"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^0.14.0",
    "react-dom": "^15.0.0 || ^0.14.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "vazco"
    ],
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "reporter": [
      "html"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "invariant": "^2.2.1",
    "lodash.clonedeep": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.isequal": "^4.4.0",
    "lodash.set": "^4.3.2",
    "lodash.xorwith": "^4.5.0",
    "simpl-schema": "0.0.3"
  }
}
